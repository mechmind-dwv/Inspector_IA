# Inspector IA - Environment Variables Configuration
# ==================================================

# ==================== APPLICATION ====================
APP_NAME=Inspector_IA
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ==================== API CONFIGURATION ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# ==================== NEO4J CONFIGURATION ====================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=inspector_ia_2024
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# ==================== POSTGRESQL CONFIGURATION ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=inspector_ia
POSTGRES_USER=inspector
POSTGRES_PASSWORD=inspector_ia_2024
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# ==================== REDIS CONFIGURATION ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=inspector_ia_2024
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ==================== RABBITMQ CONFIGURATION ====================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=inspector
RABBITMQ_PASS=inspector_ia_2024
RABBITMQ_VHOST=/
RABBITMQ_QUEUE_NAME=inspector_ia_tasks

# ==================== CELERY CONFIGURATION ====================
CELERY_BROKER_URL=amqp://inspector:inspector_ia_2024@localhost:5672//
CELERY_RESULT_BACKEND=redis://:inspector_ia_2024@localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# ==================== SECURITY ====================
JWT_SECRET_KEY=change-this-jwt-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# ==================== MACHINE LEARNING ====================
ML_MODEL_PATH=./models
ML_BATCH_SIZE=32
ML_NUM_WORKERS=4
ML_DEVICE=cpu

# ==================== FRAUD DETECTION ====================
IRA_PATRIMONIAL_WEIGHT=0.30
IRA_NETWORK_WEIGHT=0.40
IRA_TEMPORAL_WEIGHT=0.30
IRA_NETWORK_BONUS_MAX=30
COMPLETENESS_THRESHOLD=0.70

# Pattern Detection Thresholds
CRYPTO_HIDING_THRESHOLD=0.70
OFFSHORE_LAUNDERING_THRESHOLD=0.75
TRAVEL_COINCIDENCE_THRESHOLD=0.65
GHOST_COMPANY_THRESHOLD=0.80
INSIDER_TRADING_THRESHOLD=0.70

# ==================== DATA PROCESSING ====================
MAX_GRAPH_DEPTH=5
MAX_PATH_LENGTH=10
TEMPORAL_WINDOW_DAYS=90
BATCH_PROCESSING_SIZE=100

# ==================== MONITORING ====================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ENABLE_METRICS=True
ENABLE_TRACING=False

# ==================== LOGGING ====================
LOG_DIR=./logs
LOG_FILE=inspector_ia.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== FILE STORAGE ====================
UPLOAD_DIR=./data/uploads
REPORT_DIR=./reports
TEMP_DIR=./data/temp
MAX_UPLOAD_SIZE=52428800

# ==================== EXTERNAL SERVICES ====================
# Blockchain explorers (for crypto analysis)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BLOCKCHAIN_INFO_API_KEY=your_blockchain_info_api_key_here

# OSINT APIs
OPENCORPORATES_API_KEY=your_opencorporates_api_key_here
ICIJ_OFFSHORELEAKS_API_KEY=your_icij_api_key_here

# ==================== FRONTEND ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=Inspector IA
NEXT_PUBLIC_APP_VERSION=2.0.0

# ==================== DEVELOPMENT ====================
DEV_MODE=True
HOT_RELOAD=True
MOCK_EXTERNAL_APIS=False
SEED_DATABASE=False

# ==================== TESTING ====================
TEST_DATABASE_URL=postgresql://inspector:inspector_ia_2024@localhost:5432/inspector_ia_test
TEST_NEO4J_URI=bolt://localhost:7687
TEST_NEO4J_DATABASE=test

